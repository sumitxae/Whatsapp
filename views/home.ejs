            </div>
        <i class="fa-solid fa-xmark"></i>
      </div> -->

<!--search-container -->
      <div class="search-container w-full">
        <div class="input">
          <i class="fa-solid fa-magnifying-glass"></i>
          <input type="text" placeholder="Search or start new chat">
        </div>
        <i class="ri-filter-3-line"></i>
      </div>

<!--chats -->
      <div class="chat-list">
      </div>

    </div>

    <div class="right-container hidden">
<!--header -->
      <div class="header">
        <div class="img-text">
          <div class="user-img  h-10 w-10 rounded-full">
          <img class="dp talker" src="https://images.pexels.com/photos/2474307/pexels-photo-2474307.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="">
        </div>
          <h4 class="talker-name">Leo<br><span>Online</span></h4>
        </div>
        <div class="nav-icons">
          <li><i class="fa-solid fa-magnifying-glass"></i></li>
          <li><i class="fa-solid fa-ellipsis-vertical"></i></li>
        </div>
      </div>

<!--chat-container -->
      <div class="chat-container">
       
      </div>

<!--input-bottom -->
      <div class="chatbox-input">
        <i class="fa-regular fa-face-grin"></i>
        <i class="fa-sharp fa-solid fa-paperclip"></i>
        <input type="text" class="msg" placeholder="Type a message">
        <i class="fa-solid fa-microphone"></i>
      </div>
    </div>

  </div>
  <script src="/socket.io/socket.io.js"></script>
